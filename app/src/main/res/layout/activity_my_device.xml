<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_main" android:id="@+id/toolbar" />

    <TextView
        android:id="@+id/my_device_manufacturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/countryDetails" />

    <TextView
        android:id="@+id/my_device_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/countryDetails" />

    <TextView
        android:id="@+id/my_device_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/countryDetails" />

    <TextView
        android:id="@+id/my_device_version_release"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/countryDetails" />

    <TextView
        android:id="@+id/my_device_serial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/countryDetails" />

</LinearLayout>